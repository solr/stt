{% extends "MainBundle::base.html.twig" %}

{% block title %}Zeiterfassung{% endblock %}

{% block body %}
    
    <div class="content">
        <a href="{{ data.uri }}">&laquo; zur√ºck zu Mitarbeiterauswahl</a>
        {{ form_start(form) }}
            {% if newProjectAdded is defined  and newProjectAdded == 'success' %}
                <div class="alert alert-success">
                    Neues Projekt erstellt.
                </div>
            {% endif %}
            {% if newProjectAdded is defined  and newProjectAdded == 'fail' %}
                <div class="alert alert-danger">
                    Fehler!
                </div>
                <div class="alert alert-warning">
                    {{ errorMessage }}
                </div>
            {% endif %}
            {{ form_errors(form) }}
            <div>
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div>
                {{ form_label(form.sort) }}
                {{ form_errors(form.sort) }}
                {{ form_widget(form.sort) }}
            </div>
            {{ form_widget(form.submit) }}
        {{ form_end(form) }}
    </div>
{% endblock %}